<%= form_for @changeset, meta_path(@conn, :new), [id: "new-meta-form", class: "ui form new-meta-form"  ], fn phx_form -> %>

  <div class="new-meta-form__fields two">
    <div class="new-meta-form__field">
      <label class="new-meta-form__label" for="break_time_secs">
        Break time
      </label>

      <div class="ui right labeled input new-meta-form__labeled_input">
        <%= text_input phx_form, :break_time_secs, class: "new-meta-form__control", placeholder: "Break time" %>

          <div class="ui label ">
            <div class="text "> min </div>
          </div>
      </div>
    </div>

    <div class="new-meta-form__field">
      <label class="new-meta-form__label" for="pay_per_hr">
        Pay per hour
      </label>

      <div class="ui left labeled input new-meta-form__labeled_input ">
        <div class="ui label ">
          <div class="text "> &euro; </div>
        </div>

        <%= text_input phx_form, :pay_per_hr, class: "new-meta-form__control", placeholder: "Pay per hour" %>
      </div>
    </div>
  </div>

  <div class="new-meta-form__fields">
    <div class="new-meta-form__field">
      <label class="new-meta-form__label" for="night_suppl_pay_pct">
        Night Suppl. %
      </label>

      <div class="ui right labeled input new-meta-form__labeled_input ">
        <%= text_input phx_form, :night_suppl_pay_pct, class: "new-meta-form__control", placeholder: "Night Supplement Pay Percent" %>

          <div class="ui label ">
            <div class="text "> &percnt; </div>
          </div>
      </div>
    </div>

    <div class="new-meta-form__field">
      <label class="new-meta-form__label" for="sunday_suppl_pay_pct">
        Sunday Suppl. %
      </label>

      <div class="ui right labeled input new-meta-form__labeled_input ">
        <%= text_input phx_form, :sunday_suppl_pay_pct, class: "new-meta-form__control", placeholder: "Sunday Supplement Pay Percent" %>

          <div class="ui label ">
            <div class="text "> &percnt; </div>
          </div>
      </div>
    </div>
  </div>

  <div class="new-meta-form__buttons">
    <div class="ui buttons">
      <button id="new-meta-form-submit" type="button" class="ui positive button">
        Save
      </button>

      <div class="or"></div>

      <button id="new-meta-form-reset" type="button" class="ui button">
        Reset
      </button>
    </div>
  </div>
  <% end %>
