<div new-shift-main>
  <form id="new-shift-form" class="ui form new-shift-form">
    <div class="ui top attached segment">
      <div class="ui top attached label">
        Select Meta or create new.
      </div>

      <div class="ui right labeled input">
        <select name="meta_id" id="select-meta" class="ui search dropdown fluid">
          <option value="">-----</option>

          <%= for meta <- @metas do %>
            <option value="<%= meta.id %>">
              <%= Float.round(meta.break_time_secs/60, 1) %> min | &euro;
                <%= meta.pay_per_hr %> night:
                  <%= meta.night_suppl_pay_pct %> &percnt; sunday:
                    <%= meta.sunday_suppl_pay_pct %> &percnt;
            </option>
            <%end%>
        </select>

        <div id="get-new-meta-form-button" class="ui label">
          <i class="plus icon"></i>
        </div>
      </div>
    </div>

    <!-- SHIFT DATE -->
    <div class="ui top attached segment date-segment">
      <div class="ui top attached label">
        Date
      </div>

      <div class="new-shift-form__fields three">
        <select id="select-day-of-month" class="ui search dropdown">
          <option value="">Day</option>

          <%= for {day, val} <- @days_of_month do %>
            <option value="<%= day %>" <%=val.selected%>>
              <%= val.display %>
            </option>
            <%end%>
        </select>

        <select id="select-month-of-year" class="ui search dropdown">
          <option value="">Month</option>

          <%= for {month, val} <- @months_of_year do %>
            <option value="<%= month %>" <%=val.selected%>>
              <%= val.display %>
            </option>
            <%end%>
        </select>

        <select id="select-year" class="ui search dropdown">
          <option value="">Year</option>

          <%= for {year, selectionx} <- @years do %>
            <option value="<%= year %>" <%=selectionx%>>
              <%= year %>
            </option>
            <%end%>
        </select>
      </div>
    </div>
    <!-- /SHIFT DATE -->

    <!-- START TIME -->
    <div class="ui top attached segment start-time-segment">
      <div class="ui top attached label">
        Start time
      </div>

      <div class="new-shift-form__fields two">
        <input id="start-time-hour" name="start-time-hour" type="number" min="0" max="23" placeholder="HH" autocomplete="off" maxlength="2">

        <input id="start-time-min" name="start-time-min" type="number" min="0" max="59" placeholder="MM" autocomplete="off" maxlength="2">
      </div>
    </div>
    <!-- /START TIME -->

    <!-- END TIME -->
    <div class="ui top attached segment end-time-segment">
      <div class="ui top attached label">
        End time
      </div>

      <div class="new-shift-form__fields two">
        <input id="end-time-hour" name="end-time-hour" type="number" min="0" max="23" placeholder="HH" autocomplete="off" maxlength="2">

        <input id="end-time-min" name="end-time-min" type="number" min="0" max="59" placeholder="MM" autocomplete="off" maxlength="2">
      </div>
    </div>
    <!-- /END TIME -->

    <div class="new-shift-form__buttons">
      <div class="ui buttons">
        <button id="new-shift-form-submit" type="button" class="ui positive button">
          Save
        </button>

        <div class="or"></div>

        <button id="new-shift-form-reset" type="button" class="ui button">
          Reset
        </button>
      </div>
    </div>
  </form>

</div>
