<option value="">-----</option>

<%= if assigns[:metas] do  %>
  <%= for meta <- assigns[:metas] do %>
    <option data-value="<%=Poison.encode!(meta)%>" value="<%= meta[~s(id)] %>" <%=meta[~s(selected)]%> >
      <%= meta["breakTimeSecs"] %> min | &euro;
        <%= meta["payPerHr"] %> night:
          <%= meta["nightSupplPayPct"] %> &percnt; sunday:
            <%= meta["sundaySupplPayPct"] %> &percnt;
    </option>
    <%end%>

      <% else %>
        {{#each metas as |meta|}}
        <option value="{{meta.id}}" {{selected}} data-value="{{jsonStringify meta}}">
          {{meta.breakTimeSecs}} min | &euro; {{meta.payPerHr}} night: {{meta.nightSupplPayPct}} &percnt; sunday: {{meta.sundaySupplPayPct}}
          &percnt;
        </option>
        {{/each}}
        <% end %>
