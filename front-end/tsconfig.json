{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "config",
    "scripts",
    "acceptance-tests",
    "webpacks",
    "jest",
    "src/setupTests.ts"
  ]
}
